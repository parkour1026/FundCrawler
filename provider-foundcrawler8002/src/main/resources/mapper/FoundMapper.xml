<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.parkour.foundcrawler.dao.FoundDao">

    <resultMap id="baseResultMap" type="com.parkour.foundcrawler.entity.Found">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="foundcode" property="foundcode" jdbcType="VARCHAR"/>
        <result column="foundname" property="foundname" jdbcType="VARCHAR"/>
    </resultMap>

    <insert id="insertFound" useGeneratedKeys="true" keyProperty="id">
        insert into foundcrawler.found(foundcode ,foundname) values (#{foundcode},#{foundname})
    </insert>

    <select id="selectFoundByFoundCode" resultMap="baseResultMap">
        select * from foundcrawler.found where foundcode = #{foundCode}
    </select>

</mapper>